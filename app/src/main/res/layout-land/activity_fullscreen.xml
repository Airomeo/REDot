<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.REDot.FullscreenContainer"
    tools:context=".ui.design.FullscreenActivity">

    <me.zzy.redot.ui.design.MyScrollTextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:singleLine="true"
        app:clickEnable="false"
        app:isHorizontal="true"
        app:speed="4"
        app:text="@string/dummy_content"
        app:text_color="#ffffffff"
        app:text_size="128sp"
        app:times="567" />

</FrameLayout>